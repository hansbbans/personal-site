{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "A clean, modern personal website featuring gear recommendations, city food guides, photography, and book reviews.",
  "main": "fix-photo-years.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:performance": "lhci autorun",
    "test:visual": "playwright test --config=playwright.comprehensive.config.js",
    "test:visual:update": "playwright test --config=playwright.comprehensive.config.js --update-snapshots",
    "test:schema": "node tests/setup/validate-food-data.js",
    "test:mobile": "playwright test tests/visual/comprehensive-visual.spec.js --grep 'Mobile Viewport Testing'",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:performance && npm run test:schema && npm run test:visual",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "http-server -p 3000 -c-1",
    "install-browsers": "playwright install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hansbbans/personal-site.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/hansbbans/personal-site/issues"
  },
  "homepage": "https://github.com/hansbbans/personal-site#readme",
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "playwright": "^1.58.0"
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Food Data Schema",
  "description": "Schema for validating food-data.json structure",
  "type": "object",
  "required": ["metadata", "categories", "cities"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["lastUpdated", "version"],
      "properties": {
        "lastUpdated": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Date in YYYY-MM-DD format"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "categories": {
      "type": "object",
      "description": "Category definitions with emojis and subcategories",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["emoji", "subcategories"],
        "properties": {
          "emoji": {
            "type": "string"
          },
          "subcategories": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "cities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/city"
      }
    },
    "categoryStats": {
      "type": "object",
      "description": "Statistics about restaurant categories by city"
    }
  },
  "definitions": {
    "city": {
      "type": "object",
      "required": ["name", "restaurants"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "restaurants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/restaurant"
          }
        }
      }
    },
    "restaurant": {
      "type": "object",
      "required": ["name", "mainCategory", "subcategory", "lat", "lng", "address"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "legacyCategory": {
          "type": "string"
        },
        "mainCategory": {
          "type": "string",
          "minLength": 1
        },
        "subcategory": {
          "type": "string",
          "minLength": 1
        },
        "dateVisited": {
          "type": "string"
        },
        "address": {
          "type": "string",
          "minLength": 1
        },
        "dishes": {
          "type": "string"
        },
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Latitude must be between -90 and 90"
        },
        "lng": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Longitude must be between -180 and 180"
        },
        "yelpRating": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 5,
          "description": "Yelp rating must be between 0 and 5"
        },
        "googleRating": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 5,
          "description": "Google rating must be between 0 and 5"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
